{
    "printWidth": 80,
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "semi": true,
    "useTabs": false,
    "arrowParens": "always",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.md",
            "options": {
                "proseWrap": "never",
                "plugins": ["prettier-plugin-markdown"],
                "prettier-plugin-markdown": {
                    "listMarkerSpace": true
                }
            }
        }
    ]
}
